<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFBBFF"
    android:layout_margin="5dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imagenPartitura"
        android:layout_width="55dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:contentDescription="Ey"
        android:src="@drawable/prueba" />

    <TextView
        android:id="@+id/nombrePartitura"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/imagenPartitura"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/imagenPartitura"
        android:textSize="15sp" 
        android:textColor="#000000"
        android:scrollHorizontally="true"
		android:ellipsize="end" 
		android:maxLines="1"/>

    <TextView
        android:id="@+id/autorPartitura"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/imagenPartitura"
        android:layout_alignLeft="@+id/instrumentoPartitura"
        android:layout_marginBottom="14dp"
        android:textSize="12sp" 
        android:textColor="#000000" />

    <TextView
        android:id="@+id/instrumentoPartitura"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignBottom="@+id/imagenPartitura"
        android:layout_alignLeft="@+id/nombrePartitura"
        android:textSize="12sp" 
        android:textColor="#000000" />

    <Button
        android:id="@+id/masInfo"
        android:layout_width="63dp"
        android:layout_height="30dp"
		android:layout_marginTop="80dp"
		android:layout_marginLeft="12dp"
        android:text="+ Info"
        android:textSize="12dp" />

    <Button
        android:id="@+id/comprar"
        android:layout_width="63dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/masInfo"
        android:layout_alignRight="@+id/nombrePartitura"
        android:textSize="12dp" />

</RelativeLayout>