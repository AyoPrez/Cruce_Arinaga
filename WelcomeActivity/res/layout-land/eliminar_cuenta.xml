<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textoEliminarCuenta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="30dp"
        android:textSize="16sp"
        android:text="@string/esta_seguro" />
    
    <EditText 
        android:id="@+id/claveEliminarCuenta"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textoEliminarCuenta"
        android:hint="@string/eliminar_cuenta_clave"
        />
    
    <Button 
        android:id="@+id/botonEliminarCuenta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/claveEliminarCuenta"
        android:layout_centerHorizontal="true"
        android:text="@string/eliminar_cuenta"
        />

</RelativeLayout>
