<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_scoresapp"
    android:orientation="vertical" >
    
	 <EditText
        android:id="@+id/et_mail_olvidopass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="30dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"        
        android:textSize="23sp"
        android:inputType="textEmailAddress"
       	android:textColorHint="#DDD"
        android:textColor="#DDD"
        android:textColorHighlight="#DDD"
        android:hint="@string/mail_olvido_pass" >
        <requestFocus />
    </EditText>
    	    
  	<Button
      	android:id="@+id/b_confirm_olpass"
        style="?android:attr/buttonBarButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:textColor="#EEE"
        android:background="@drawable/stores_buttons"
        android:textSize="25sp"
        android:text="@string/confirm_olvidopass" />

</LinearLayout>