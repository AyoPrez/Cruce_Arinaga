<?xml version="1.0" encoding="utf-8"?>
<ScrollView
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:background="@drawable/background_scoresapp"
    android:layout_height="match_parent" >

    <LinearLayout
    	android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical" >
        
        <TextView
	        android:id="@+id/name_preferencies"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:layout_marginTop="30dp"
	        android:textColor="#222"
	        android:textSize="40sp"
	        android:text="@string/mis_datos_nombre" />
	    
	    <TextView
	        android:id="@+id/mail_preferencies"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:layout_marginTop="30dp"
	        android:textColor="#222"
	        android:textSize="40sp"
	        android:text="@string/mis_datos_email" />
	    
	    <TextView
	        android:id="@+id/credit_preferencies"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="40dp"
	        android:layout_marginRight="40dp"
	        android:layout_marginTop="30dp"
	        android:textColor="#222"
	        android:textSize="40sp"
	        android:layout_marginBottom="20dp"
	        android:text="@string/mis_datos_saldo" />
	    
	    
	    <Button
	        android:id="@+id/logout_button_preferencies"
	        android:layout_width="match_parent"
	        android:layout_height="180dp"
	        android:gravity="center_vertical|left"
	        android:paddingLeft="50dp"
	        android:textColor="#222"
	        android:textSize="37sp"
        	android:layout_marginTop="20dp"
        	android:layout_marginBottom="2dp"
        	android:background="#40DDDDDD"
	        android:text="@string/cerrar_sesion" />
	    
	    <Button
	        android:id="@+id/changepass_preferencies"
	        android:layout_width="match_parent"
	        android:layout_height="180dp"
	        android:gravity="center_vertical|left"
	        android:paddingLeft="50dp"
	        android:textColor="#222"
	        android:textSize="37sp"
        	android:layout_marginTop="2dp"
        	android:layout_marginBottom="2dp"
        	android:background="#40DDDDDD"
	        android:text="@string/cambiar_pass" />
	
	    <Button
	        android:id="@+id/term_conditions_preferencies"
	        android:layout_width="match_parent"
	        android:layout_height="180dp"
	        android:gravity="center_vertical|left"
	        android:paddingLeft="50dp"
	        android:textColor="#222"
	        android:textSize="37sp"
        	android:layout_marginTop="2dp"
        	android:layout_marginBottom="2dp"
        	android:background="#40DDDDDD"
	        android:text="@string/terminos_condiciones" />
	
	    <Button
	        android:id="@+id/term_purchase_preferencies"
	        android:layout_width="match_parent"
	        android:layout_height="180dp"
	        android:gravity="center_vertical|left"
	        android:paddingLeft="50dp"
	        android:textColor="#222"
	        android:textSize="37sp"
        	android:layout_marginTop="2dp"
        	android:layout_marginBottom="2dp"
        	android:background="#40DDDDDD"
	        android:text="@string/condiciones_compra" />
	
	    <Button
	        android:id="@+id/delete_account_preferencies"
	        android:layout_width="match_parent"
	        android:layout_height="180dp"
	        android:gravity="center_vertical|left"
	        android:paddingLeft="50dp"
	        android:textColor="#C22"
	        android:textStyle="bold"
	        android:textSize="37sp"
        	android:layout_marginTop="2dp"
        	android:layout_marginBottom="2dp"
        	android:background="#40DDDDDD"
	        android:text="@string/eliminar_cuenta" />
    </LinearLayout>
   
</ScrollView>