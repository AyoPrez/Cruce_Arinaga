<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_scoresapp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/feedbackTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="37dp"
        android:textSize="16sp"
        android:textColor="#222"
        android:text="@string/feedback_envianos" />

    <EditText 
        android:id="@+id/feedbackCajaTexto"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:inputType="textMultiLine"
        android:layout_gravity="center" />

    <Button 
        android:id="@+id/feedbackBoton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/stores_buttons"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#DDD"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:text="@string/feedback_boton" />

</LinearLayout>
