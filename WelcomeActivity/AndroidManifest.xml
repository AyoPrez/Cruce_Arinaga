<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rising.drawing"
    android:configChanges="orientation|keyboardHidden"
    android:screenOrientation="portrait"
    android:versionCode="7"
    android:versionName="0.4.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="20" />

    <supports-screens
        android:largeScreens="true"
        android:normalScreens="true"
        android:requiresSmallestWidthDp="600"
        android:smallScreens="false"
        android:xlargeScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >

        <!-- android:theme="@style/AppTheme" -->

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <!-- Login Activity -->
        <activity
            android:name="com.rising.login.Login"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <!-- MainScreen Activity -->
        <activity
            android:name="com.rising.mainscreen.MainScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppBaseTheme" >
        </activity>

        <!--
         Facebook Login 
         <activity
            android:name="com.facebook.LoginActivity"
           	android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />
        -->


        <!-- Score Activity -->
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme" >
        </activity>

        <!-- MainActivity Store -->
        <activity
            android:name="com.rising.store.MainActivityStore"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tabs" >
        </activity>

        <!-- Score Profile -->
        <activity
            android:name="com.rising.store.ScoreProfile"
            android:label="@string/app_name"
            android:parentActivityName="com.rising.store.MainActivityStore"
            android:theme="@style/Theme.Tabs" >
        </activity>

        <!-- Money Activity -->
        <activity
            android:name="com.rising.money.MoneyActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tabs" >
        </activity>

        <!-- Free Money Activity -->
        <activity
            android:name="com.rising.money.FreeMoneyActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tabs" >
        </activity>

        <!-- Welcome Activity -->
        <activity
            android:name="com.rising.login.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rising.store.SearchStoreActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tabs" >
        </activity>
        <activity android:name="com.rising.money.Facebook_Publish" >
        </activity>
        <activity android:name="com.rising.money.Twitter_Publish" >
        </activity>
        <activity android:name="com.rising.store.ImageActivity" >
        </activity>
        <activity android:name="com.rising.money.Google_Rate" >
        </activity>
        <activity android:name="com.facebook.LoginActivity" >
        </activity>
        <activity
            android:name="com.rising.store.MyPurchases"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tabs" >
        </activity>
        <activity
            android:name="com.rising.mainscreen.preferencies.PreferenciesActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tabs" >
        </activity>
        <activity
            android:name="com.rising.mainscreen.FileExplore"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tabs" >
        </activity>
        <activity
            android:name="com.rising.pdf.PDFReaderActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Tabs" >
        </activity>
        <activity android:name="com.rising.login.Facebook_Actions" >
        </activity>

        <activity android:name="com.rising.login.login.Login_Fragment" android:label="@string/app_name" android:theme="@style/AppTheme"></activity>
        <activity android:name="com.rising.login.facebook.Facebook_Fragment" android:label="@string/app_name" android:theme="@style/AppTheme"></activity>

    </application>

</manifest>
